{
  "name": "pingado",
  "version": "1.0.0",
  "description": "Cross-platform network scanner and ping utility",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run cleanup && npm run build:main && concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"npm run start:electron\"",
    "dev:renderer": "webpack serve --config webpack.renderer.js --mode development",
    "dev:main": "webpack --config webpack.main.js --mode development --watch",
    "start:electron": "wait-on dist/main.js && cross-env NODE_ENV=development electron .",
    "cleanup": "pkill -f webpack || true && pkill -f electron || true",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config webpack.main.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.js --mode production",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --win --mac --linux"
  },
  "keywords": [
    "network",
    "ping",
    "scanner",
    "electron",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.1",
    "electron-icon-builder": "^2.0.1",
    "html-webpack-plugin": "^5.6.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "sharp-cli": "^5.2.0",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "util": "^0.12.5",
    "wait-on": "^8.0.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.pingado.networkscanner",
    "productName": "Pingado",
    "copyright": "Copyright Â© 2024 Pingado",
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "!dist/*.d.ts"
    ],
    "extraResources": [
      {
        "from": "README.md",
        "to": "README.md"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Pingado",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Pingado"
    },
    "dmg": {
      "title": "Pingado ${version}",
      "backgroundColor": "#667eea",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 150,
          "type": "file"
        },
        {
          "x": 400,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
